{
  "name": "squad-app-ext",
	"displayName": "Squad App Ext",
	"publisher": "SquaddApp",
	"description": "Help mobile app devs to work easily",
	"version": "0.0.4",
	"engines": {
		"vscode": "^1.55.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onStartupFinished"
	],   
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "squad-app-ext.createScreen",
				"title": "Luko: Create new screen"
			},
			{
				"command": "squad-app-ext.createFeatureFlag",
				"title": "Luko: Add Feature Flag"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "squad-app-ext.createScreen",
					"when": "explorerResourceIsFolder && resourcePath =~ /\/app\/features/",
					"group": "2_workspace@1"
				},
				{
					"command": "squad-app-ext.createFeatureFlag",
					"when": "explorerResourceIsFolder && resourcePath =~ /\/app\/",
					"group": "2_workspace@1"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.55.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}
